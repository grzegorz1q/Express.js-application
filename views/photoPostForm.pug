extends layout

block content
    h1 Dodaj zdjęcie

    if errorMessage
        .alert.alert-danger #{errorMessage}
    
    form(action=`/mountains/${mountain.id}/photo` method="POST" enctype="multipart/form-data")
        .row.mb-3.align-items-center
            p.col-sm-1.col-form-label Wybierz zdjęcia
            .col-sm-3
                input(type="file" name="images" accept="image/*" class="form-control" multiple)
        input(type="submit" value="Dodaj" class="btn btn-success")
        